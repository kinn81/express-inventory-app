extends layout 

block content 

  h1 #{title}: #{genre.name}

  if genre_games.length 
    p #[strong Delete the following games before attempting to delete this genre.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Games 
      dl
        each game in genre_games 
          dt 
            a(href=game.url) #{game.title}
          dd #{game.description}
  else  
    p Do you really want to delete this Genre?

    form(method='POST')
      div
        input(type='hidden', name='genreid', value=genre._id )
      button(type="submit") Delete
      

