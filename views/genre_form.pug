extends layout 

block content 

    h1 #{title}

    form(method='POST')
      div 
        label(for='name') Genre: 
        input#name.form-control(type='text', placeholder='Action, Role Playing etc.', name='name', required value=(undefined===genre ? '' : genre.name))
      button.btn.btn-primary(type='submit') Submit

    if errors 
      ul 
        for error in errors 
          li!=error.msg